{
  "name": "json-preview-backend",
  "version": "1.0.0",
  "description": "Backend API for JSON Preview & Storage Tool",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate src/infrastructure/database/migrations/Migration -d src/infrastructure/database/dataSource.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/infrastructure/database/dataSource.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/infrastructure/database/dataSource.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d src/infrastructure/database/dataSource.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d src/infrastructure/database/dataSource.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mustache": "^4.2.0",
    "morgan": "^1.10.0",
    "puppeteer": "^22.13.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.23",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
